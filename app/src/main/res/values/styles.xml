<resources>
    <!-- Spinner Drop-down Item Style -->
    <style name="SpinnerDropDownItem" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@color/spinner_drop_down_background</item>
        <item name="android:textColor">@color/spinner_text_color</item>
    </style>

    <!-- Spinner Style -->
    <style name="CustomSpinnerStyle">
        <item name="android:background">@color/spinner_background</item>
        <item name="android:popupBackground">@color/spinner_drop_down_background</item>
        <item name="android:textColor">@color/spinner_text_color</item>
    </style>
</resources>
